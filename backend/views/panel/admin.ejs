
<%- include('../partials/header', { titulo }) %>

<h1 class="mb-4"><i class="bi bi-bar-chart-fill"></i> Panel de Administraci칩n</h1>

<!-- Tarjetas resumen -->
<div class="row mb-4">
  <div class="col-md-3">
    <div class="card text-bg-primary shadow-sm">
      <div class="card-body">
        <h6 class="card-title">Usuarios Totales</h6>
        <p class="display-6"><%= totalUsuarios %></p>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card text-bg-success shadow-sm">
      <div class="card-body">
        <h6 class="card-title">Productos Registrados</h6>
        <p class="display-6"><%= totalProductos %></p>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card text-bg-warning shadow-sm">
      <div class="card-body">
        <h6 class="card-title">Categor칤as</h6>
        <p class="display-6"><%= totalCategorias %></p>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card text-bg-info shadow-sm">
      <div class="card-body">
        <h6 class="card-title">Precio Promedio</h6>
        <p class="display-6">$<%= promedioPrecio %></p>
      </div>
    </div>
  </div>
</div>

<!-- Usuarios por rol -->
<div class="row mb-4">
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-header bg-dark text-white">
        <i class="bi bi-people-fill"></i> Usuarios por Rol
      </div>
      <div class="card-body">
        <p><i class="bi bi-person-fill-gear"></i> Administradores: <strong><%= adminCount %></strong></p>
        <p><i class="bi bi-person-fill"></i> Clientes: <strong><%= clienteCount %></strong></p>
      </div>
    </div>
  </div>

  <!-- Productos por categor칤a -->
  <div class="col-md-6">
    <div class="card shadow-sm">
      <div class="card-header bg-secondary text-white">
        <i class="bi bi-diagram-3-fill"></i> Productos por Categor칤a
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <% productosConCategoria.forEach(pc => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <%= pc.nombre %>
              <span class="badge bg-primary rounded-pill"><%= pc.total %></span>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>
</div>

<!-- Productos m치s caros -->
<div class="card mb-4 shadow-sm">
  <div class="card-header bg-danger text-white">
    <i class="bi bi-box-seam-fill"></i> Top 5 Productos m치s Caros
  </div>
  <div class="card-body p-0">
    <table class="table table-hover mb-0">
      <thead class="table-light">
        <tr>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Categor칤a</th>
        </tr>
      </thead>
      <tbody>
        <% productosRecientes.forEach(p => { %>
          <tr>
            <td><%= p.nombre %></td>
            <td>$<%= p.precio.toFixed(2) %></td>
            <td><%= p.categoria ? p.categoria.nombre : 'Sin categor칤a' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<!-- Usuarios recientes -->
<div class="card shadow-sm">
  <div class="card-header bg-success text-white">
    <i class="bi bi-person-lines-fill"></i> Usuarios Recientes
  </div>
  <div class="card-body p-0">
    <table class="table table-hover mb-0">
      <thead class="table-light">
        <tr>
          <th>Nombre</th>
          <th>Correo</th>
          <th>Rol</th>
        </tr>
      </thead>
      <tbody>
        <% usuariosRecientes.forEach(u => { %>
          <tr>
            <td><%= u.nombre %></td>
            <td><%= u.correo %></td>
            <td><%= u.rol %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<!-- Gr치ficas -->
<div class="row mt-5">
  <div class="col-md-6">
    <div class="card mb-4 shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Distribuci칩n de Roles</h5>
        <canvas id="rolesChart" width="400" height="300"></canvas>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card mb-4 shadow-sm">
      <div class="card-body">
        <h5 class="card-title">Resumen General</h5>
        <canvas id="resumenChart" width="400" height="300"></canvas>
      </div>
    </div>
  </div>
</div>

<!-- 칔ltimos productos -->
<h2 class="mt-5">游 칔ltimos productos agregados</h2>
<div class="row">
  <% productosRecientes.forEach(p => { %>
    <div class="col-md-4 mb-3">
      <div class="card h-100 shadow-sm">
        <% if (p.imagen) { %>
          <img src="<%= p.imagen %>" class="card-img-top" alt="Producto" style="height: 200px; object-fit: cover;">
        <% } %>
        <div class="card-body">
          <h5 class="card-title"><%= p.nombre %></h5>
          <p class="card-text"><%= p.descripcion || 'Sin descripci칩n' %></p>
          <p class="card-text fw-bold">$<%= p.precio.toFixed(2) %></p>
          <p class="card-text small text-muted">Categor칤a: <%= p.categoria?.nombre || 'Sin categor칤a' %></p>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<!-- Script para Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  const ctxRoles = document.getElementById('rolesChart').getContext('2d');
  new Chart(ctxRoles, {
    type: 'doughnut',
    data: {
      labels: ['Administradores', 'Clientes'],
      datasets: [{
        data: [<%= adminCount %>, <%= clienteCount %>],
        backgroundColor: ['#0d6efd', '#198754']
      }]
    },
    options: { responsive: true }
  });

  const ctxResumen = document.getElementById('resumenChart').getContext('2d');
  new Chart(ctxResumen, {
    type: 'bar',
    data: {
      labels: ['Usuarios', 'Productos', 'Categor칤as'],
      datasets: [{
        label: 'Cantidad',
        data: [<%= totalUsuarios %>, <%= totalProductos %>, <%= totalCategorias %>],
        backgroundColor: ['#0d6efd', '#198754', '#ffc107']
      }]
    },
    options: {
      responsive: true,
      scales: {
        y: { beginAtZero: true }
      }
    }
  });
</script>

<%- include('../partials/footer') %>