<%- include('../partials/header', { titulo }) %>

<div class="container py-4">
  <h1 class="mb-4 text-center">Cat√°logo de Productos</h1>

  <div class="row">
    <% if (productos.length === 0) { %>
      <div class="col-12">
        <div class="alert alert-warning text-center">
          No hay productos disponibles.
        </div>
      </div>
    <% } else { %>
      <% productos.forEach(prod => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm border-0">
            <img src="<%= prod.imagen || 'https://via.placeholder.com/400x200?text=Producto' %>" class="card-img-top" alt="Producto" />
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= prod.nombre %></h5>
              <p class="card-text text-success fw-bold">üí≤ <%= prod.precio.toFixed(2) %></p>
              <% if (prod.categoria) { %>
                <p class="text-muted mb-1">Categor√≠a: <%= prod.categoria.nombre %></p>
              <% } %>
              <p class="card-text small text-secondary"><%= prod.descripcion || 'Sin descripci√≥n disponible.' %></p>
              <div class="mt-auto">
                <a href="/productos/<%= prod._id %>" class="btn btn-outline-primary btn-sm w-100">Ver m√°s</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>

