<%- include('../partials/header', { titulo }) %>

<div class="container py-5">
  <div class="row g-5 align-items-center">
    <!-- Imagen del producto -->
    <div class="col-lg-6">
      <div class="position-relative overflow-hidden rounded-4 shadow-lg border border-light-subtle">
        <img src="<%= producto.imagen || 'https://via.placeholder.com/600x400?text=Producto+sin+imagen' %>" 
             class="img-fluid w-100 transition-scale" 
             alt="Imagen del producto"
             style="transition: transform 0.4s ease;">
      </div>
    </div>

    <!-- Detalles del producto -->
    <div class="col-lg-6">
      <h1 class="display-4 fw-bold text-gradient mb-3"><%= producto.nombre %></h1>
      <h3 class="text-success mb-4">💲 <%= producto.precio.toFixed(2) %></h3>

      <div class="mb-4">
        <h5 class="fw-semibold">📝 Descripción</h5>
        <p class="text-muted"><%= producto.descripcion || 'Sin descripción disponible.' %></p>
      </div>

      <div class="mb-4">
        <h6 class="fw-semibold">📦 Categoría</h6>
        <span class="badge bg-gradient bg-info text-dark px-3 py-2 fs-6">
          <%= producto.categoria ? producto.categoria.nombre : 'Sin categoría' %>
        </span>
      </div>

      <div class="d-flex gap-3">
        <a href="/productos" class="btn btn-outline-dark rounded-pill px-4">
          ← Volver al catálogo
        </a>
        <form action="/carrito/agregar/<%= producto._id %>" method="POST">
          <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm">
            🛒 Agregar al carrito
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
  .text-gradient {
    background: linear-gradient(90deg, #007cf0, #00dfd8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .transition-scale:hover {
    transform: scale(1.03);
  }

  .bg-gradient {
    background: linear-gradient(135deg, #d4fc79 0%, #96e6a1 100%) !important;
  }
</style>

<%- include('../partials/footer') %>

